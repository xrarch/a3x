fn MonitorCommandHelp { -- }
	auto plist
	MonitorCommandList@ plist!

	auto n
	plist@ List_Head + @ n!

	ResetLines

	while (n@ 0 ~=)
		auto pnode
		n@ ListNodeValue
		pnode!

		auto q
		pnode@ MonitorCommand_HelpText + @ q!

		if (q@ 0 ~=)
			if (WaitNext ~~)
				return
			end
		
			q@ pnode@ MonitorCommand_Name + @ " \[[33m%10s\[[0m%s\n" Printf
		end

		n@ ListNodeNext n!
	end
end


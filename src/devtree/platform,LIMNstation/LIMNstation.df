#include "<df>/dragonfruit.h"
#include "<inc>/a3x.h"

extern BuildEBus { -- }
extern BuildLimn2k { -- }
extern BuildLSIC { -- }

fn BuildPlatform { -- }
	DeviceNew
		"platform" DSetName
	
		"LIMNstation" "model" DAddProperty

		"platform" "deviceType" DAddProperty

		BuildLimn2k

		BuildEBus

		BuildLSIC
	DeviceExit
end

var PlatformClockPath 0
